# Databricks Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Databricks Workspace Configuration
DATABRICKS_HOST=https://databrics-host.databricks.com
DATABRICKS_TOKEN=your-databricks-token

# Alternative authentication methods (use one of these)
# DATABRICKS_CLIENT_ID=your-service-principal-client-id
# DATABRICKS_CLIENT_SECRET=your-service-principal-client-secret

# Unity Catalog Configuration
DATABRICKS_CATALOG=uc_catalog
DATABRICKS_SCHEMA=uc_schema

# Environment Settings
ENVIRONMENT=dev
PROJECT_NAME=databricks-claude-code-ai-engineering

# # Local Development Settings
# DATABRICKS_CONNECT_CLUSTER_ID=your-cluster-id-here
# DATABRICKS_CONNECT_ORG_ID=your-org-id-here

# Databricks Serverless Compute is enabled by default
DATABRICKS_SERVERLESS_COMPUTE_ID=auto

# MLflow Configuration
MLFLOW_TRACKING_URI=databricks
MLFLOW_REGISTRY_URI=databricks-uc
MLFLOW_EXPERIMENT_NAME=/Users/<username>/databricks-claude-code-ai-engineering
MLFLOW_EXPERIMENT_ID=your-experiment-id

# LangGraph Agent Configuration
LLM_ENDPOINT_NAME=databricks-meta-llama-3-3-70b-instruct
# Alternative endpoints:
# LLM_ENDPOINT_NAME=databricks-claude-3-5-sonnet
# LLM_ENDPOINT_NAME=databricks-gpt-4

# Vector Search Configuration (optional)
VECTOR_SEARCH_INDEX=your_catalog.your_schema.your_index
VECTOR_SEARCH_ENDPOINT=your-vector-search-endpoint